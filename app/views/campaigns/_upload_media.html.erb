<div id="photo_from_local" class="formRow clearfix donation_inputs photo_url" style="display:none;">
  <%= form_for @photo, :url => "/upload_media", :html => {:multipart => true }, :remote => true do |f| %>
    <label>Photo Image:</label>
    <div class="formValue">
      <%= f.file_field :cover_image %>
      <input type="text" name="image_id" id="image_id"/>
    </div>
    <div class="formValue">
      <%= f.submit "Upload", :id => "submit_from_local" %>
    </div>
  <% end %>
</div>